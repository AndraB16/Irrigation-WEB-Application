@model IEnumerable<IrigationAPP.Models.ValveState>

@{
    ViewData["Title"] = "Manual Control";
}

<h1>Manual Control</h1>

<table class="table">
    <thead>
        <tr>
            <th>
                Valve Id
            </th>
            <th>
                State
            </th>
            <th>
                Time
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.ValveId)
            </td>
            <td>
                @{
                    string displayState = item.State == 0 ? "OFF" : "ON";
                }
                @displayState
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Time)
            </td>
            <td>
                <form method="post" asp-action="TurnOn" asp-route-id="@item.ValveId">
                    <button type="submit" class="btn btn-success">Turn On</button>
                </form>
                <form method="post" asp-action="TurnOff" asp-route-id="@item.ValveId">
                    <button type="submit" class="btn btn-danger">Turn Off</button>
                </form>

            </td>
        </tr>
        }
    </tbody>
</table>
